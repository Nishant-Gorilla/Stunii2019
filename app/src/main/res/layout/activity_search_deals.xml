<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".view.activity.SearchDealsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/logosignup"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/img_cross"
            android:layout_alignParentRight="true"
            android:background="@drawable/cross_white"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorgray"
            android:layout_height="@dimen/_1sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyEditText
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:id="@+id/et_search"
                android:hint="Type Here"
                android:padding="@dimen/_8sdp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/colorgray"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:text="Search"
                android:id="@+id/tv_search"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorgray"
            android:layout_height="@dimen/_1sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:gravity="center"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_deals_list"
                android:visibility="gone"
                android:layout_height="match_parent"/>
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="No Results"
                android:id="@+id/tv_hide"
                android:textSize="@dimen/_25sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>