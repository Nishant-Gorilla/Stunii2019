<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="@dimen/_180sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/image"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/img_vip"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="@drawable/the_vip"
            android:layout_height="@dimen/_80sdp" />
        <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/tv_distance"
            android:layout_marginTop="130dp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:alpha="0.8"
            android:background="@drawable/boarder_light"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_40sdp"
                android:src="@drawable/client"
                android:id="@+id/iv_logo"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                    android:layout_width="wrap_content"
                    android:text="Work and Go "
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                    android:layout_width="wrap_content"
                    android:text="50% off Everyday "
                    android:id="@+id/tv_deal_detail"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>