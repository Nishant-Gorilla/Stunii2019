<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
             <androidx.appcompat.widget.AppCompatImageView
                 android:layout_width="wrap_content"
                 android:layout_centerVertical="true"
                 android:id="@+id/yv_back"
                 android:src="@drawable/back_white"
                 android:layout_height="wrap_content" />

                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/jobs"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/iv_share"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/share" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:background="@color/colorBlack"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/border_circle_logo"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:id="@+id/img_logo"
                            android:src="@drawable/logo_demo"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_gravity="center"
                        android:orientation="vertical"

                        android:layout_height="wrap_content">
                        <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:text="Member Support"
                            android:id="@+id/tv_job_title"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content" />
                        <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:id="@+id/tv_company_name"
                            android:textColor="@color/colorWhite"
                            android:text="Golf Student Union"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/location"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />
                            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:id="@+id/tv_address"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textColor="@color/colorWhite"
                                android:text="Parkgate Road,Chester"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="2"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="1"

                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/part_time"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content" />
                                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:text="Part-time"
                                    android:textSize="@dimen/_14sdp"
                                    android:id="@+id/tv_job_type"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textColor="@color/colorWhite"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/amount"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content" />
                                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:text="$25/hr"
                                    android:id="@+id/tv_hourly_rate"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textColor="@color/colorWhite"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="match_parent"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorPrimary"
                android:text="Congrats!You are just one click away from applying for this job"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content" />
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                android:layout_width="match_parent"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_job_desc"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_70sdp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:text="@string/apply"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/boarder_next"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:id="@+id/tv_apply_jobs"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorWhite"

        android:layout_height="wrap_content" />

</RelativeLayout>