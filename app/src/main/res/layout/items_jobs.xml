<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:padding="@dimen/_4sdp"
        android:orientation="horizontal"

        android:layout_height="@dimen/_120sdp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/border_circle_logo"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:id="@+id/img_logo"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
           android:layout_gravity="center"
            android:orientation="vertical"

            android:layout_height="wrap_content">
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:text="Golf Support"
                android:singleLine="true"
                android:id="@+id/tv_job_title"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:singleLine="true"
                android:id="@+id/tv_company_name"
                android:layout_marginLeft="@dimen/_2sdp"
                android:textColor="@color/colorBlack"
                android:text="Golf Student Union"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/location"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/tv_address"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:text="Parkgate Road,Chester"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/part_time"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                    <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                        android:layout_width="wrap_content"
                        android:text="Part-time"
                        android:id="@+id/tv_job_type"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/amount"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                    <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                        android:layout_width="wrap_content"
                        android:text="$25/hr"
                        android:singleLine="true"
                        android:id="@+id/tv_hourly_rate"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>