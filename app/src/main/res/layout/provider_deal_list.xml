<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context="obllivionsoft.djole.nis.rs.stusdeals.view.activity.DealDetailActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/rl_header"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="@dimen/_180sdp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img_deal"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/img_vip"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/the_vip"
                    android:layout_height="@dimen/_100sdp" />
            </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/rl_header"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/ll_deal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/_16sdp"
                        android:id="@+id/tv_deal_title"
                        android:textColor="@color/colorWhite"
                        android:text="2-4-1 Cocktails All Day,Everyday!"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:id="@+id/img_provider"
                            android:src="@drawable/logo_demo"
                            android:layout_height="@dimen/_20sdp" />
                        <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:id="@+id/tv_provider_name"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/colorWhite"
                            android:text="Wrexham FBS"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_gravity="center"
                        android:gravity="center"
                       android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.1"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/distance"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />
                            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                                android:layout_width="wrap_content"
                                android:text="4143.84mi"
                                android:id="@+id/tv_distance"
                               android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:textColor="@color/colorWhite"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".9"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_10sdp"
                                android:src="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_10sdp" />
                            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                                android:layout_width="wrap_content"
                                android:text="Everyday"
                                android:id="@+id/tv_day"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:textColor="@color/colorWhite"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <androidx.appcompat.widget.AppCompatRatingBar
                                android:layout_width="wrap_content"
                                android:numStars="5"
                                android:rating="5"
                                android:id="@+id/rating_bar"
                                android:theme="@style/RatingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_height="wrap_content" />
                            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                                android:layout_width="wrap_content"
                                android:text="(30)"
                                android:id="@+id/tv_number"
                                android:textColor="@color/colorWhite"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


</LinearLayout>
