<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:background="@drawable/premium_bg"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="@dimen/_30sdp"
                android:id="@+id/ll_back"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/back"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:text="@string/PremiumText"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.4"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_height="0dp">
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:text="VIP Offers"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_vip_offers"
                android:layout_height="@dimen/_130sdp"></androidx.recyclerview.widget.RecyclerView>
          <LinearLayout
              android:layout_width="@dimen/_90sdp"
              android:gravity="center_vertical"
              android:background="@drawable/special_offer"
              android:layout_height="@dimen/_20sdp">
              <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                  android:layout_width="wrap_content"
                  android:text="Special Offer"
                  android:gravity="center"
                  android:layout_marginLeft="@dimen/_7sdp"
                  android:textColor="@color/colorWhite"
                  android:layout_height="wrap_content" />
          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/boarder_offers"
                android:layout_height="@dimen/_80sdp">
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:text="Yearly"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/pound"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content" />
                    <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_price"
                        android:textSize="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content" />
                    <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                        android:layout_width="wrap_content"
                        android:text="/year"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                    android:layout_width="wrap_content"
                    android:text="Cancel anytime"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                android:layout_width="wrap_content"
                android:text="Details"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="wrap_content">
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                    android:layout_width="wrap_content"
                    android:text="Save upto "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_20sdp"
                    android:layout_height="wrap_content" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/pound_small"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:text="300"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content" />
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextView
                    android:layout_width="wrap_content"
                    android:text=" every month"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_20sdp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_upgrade"
                android:background="@drawable/boarder_next"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <obllivionsoft.djole.nis.rs.stusdeals.controller.customViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:text="@string/hellyeah"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>